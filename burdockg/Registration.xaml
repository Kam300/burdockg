<Window x:Class="burdockg.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:burdockg"
        mc:Ignorable="d"
        Title="Лопушок" Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode ="NoResize"
        Icon="/images/logo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26.986"/>
            <ColumnDefinition Width="99.014"/>
            <ColumnDefinition Width="55.014"/>
            <ColumnDefinition Width="143.014"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Image Source="images/logo.png" 
               Width="120" 
               Height="120" 
               Margin="20,0,20,0"
               VerticalAlignment="Center"
               Grid.Column="0" Grid.ColumnSpan="3"  Grid.RowSpan="10"/>


        <Button Content="Назад"
                Height="40"
                Background="#00FF7F"
                Foreground="Black"
                Margin="0,0,0,15" 
                FontFamily="Gabriola" 
                FontSize="24" 
                Grid.Column="1" 
                Grid.ColumnSpan="1"  
                Grid.Row="5" 
                Click="back_Click" 
                BorderThickness="0,0,0,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <TextBlock Text="Регистрация" 
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" 
                   FontFamily="Gabriola" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="5" />
        
        <StackPanel Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="8"
                    Margin="0,50,20,20">

            <TextBlock Text="Фамилия" FontFamily="Gabriola" LineHeight="6" FontSize="16"/>
            <TextBox x:Name="lastNameTextBox" 
                     Height="35" 
                     Background="#E0FFFF"
                     Margin="0,-5,0,15"
                     FontSize="16"
                     VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            
            <TextBlock Text="Имя" FontFamily="Gabriola" LineHeight="6" FontSize="16"/>
            <TextBox x:Name="firstNameTextBox" 
                     Height="35" 
                     Background="#E0FFFF"
                     Margin="0,-5,0,15"
                     FontSize="16"
                     VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            
            <TextBlock Text="Отчество" FontFamily="Gabriola" LineHeight="6" FontSize="16"/>
            <TextBox x:Name="middleNameTextBox" 
                     Height="35" 
                     Background="#E0FFFF"
                     Margin="0,-5,0,15"
                     FontSize="16"
                     VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            
            <TextBlock Text="Логин" FontFamily="Gabriola" LineHeight="6" FontSize="16"/>
            <TextBox x:Name="loginTextBox" 
                     Height="35" 
                     Background="#E0FFFF"
                     Margin="0,-5,0,15"
                     FontSize="16"
                     VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Пароль" FontFamily="Gabriola" FontSize="16"/>
            <PasswordBox x:Name="passwordBox" 
                         Height="35"
                         Background="#E0FFFF" 
                         Margin="0,-5,0,25"
                         FontSize="16">
                <PasswordBox.Template>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="2"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </PasswordBox.Template>
            </PasswordBox>

            <TextBlock Text="Роль" FontFamily="Gabriola" LineHeight="6" FontSize="16"/>
            <ComboBox x:Name="roleComboBox" 
                      Height="35" 
                      Background="#E0FFFF"
                      Margin="0,-5,0,15"
                      FontSize="16"
                      VerticalContentAlignment="Center">
                <ComboBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </ComboBox.Resources>
            </ComboBox>
            
            <TextBlock Text="Повторить пароль" FontFamily="Gabriola" FontSize="16"/>
            <PasswordBox x:Name="confirmPasswordBox" 
                         Height="35"
                         Background="#E0FFFF" 
                         Margin="0,-5,0,25"
                         FontSize="16">
                <PasswordBox.Template>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="2"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </PasswordBox.Template>
            </PasswordBox>

            <Button Content="Продолжить"
                    Height="40"
                    Background="#00FF7F"
                    Foreground="Black" 
                    Margin="0,10,0,15" 
                    FontFamily="Gabriola" 
                    FontSize="24" 
                    BorderThickness="0,0,0,0"
                    Click="Continue_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
