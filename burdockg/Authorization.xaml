<Window x:Class="burdockg.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:burdockg"
        mc:Ignorable="d"
        Title="Лопушок" Height="380" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode ="NoResize"
         Icon="/images/logo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26.986"/>
            <ColumnDefinition Width="113.014"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="images/logo.png" 
               Width="100" 
               Height="100" 
               Margin="20,0,20,0"
               VerticalAlignment="Center"
               Grid.Column="0" Grid.ColumnSpan="2"/>
        
        <TextBlock Text="Авторизация" 
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" FontFamily="Gabriola" Grid.Column="0" Grid.ColumnSpan="5" />
        
        <StackPanel Grid.Column="2" 
                    Margin="0,40,20,20">

           

            <TextBlock Text="Логин" FontFamily="Gabriola" LineHeight="6" FontSize="16"/>
            <TextBox Height="35" 
                     Background="#E0FFFF"
                     Margin="0,-5,0,15"
                     FontSize="16"
                      VerticalContentAlignment="Center"

                     
                     >
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Пароль" FontFamily="Gabriola" FontSize="16"/>
            <PasswordBox Height="35"
                        Background="#E0FFFF" 
                        Margin="0,-5,0,25"
                          FontSize="16">
                <PasswordBox.Template>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="2"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </PasswordBox.Template>
            </PasswordBox>

            <Button Content="Вход"
                    Height="40"
                    Background="#00FF7F"
                    Foreground="Black" 
                    Margin="0,0,0,15" FontFamily="Gabriola" FontSize="24" BorderThickness="0,0,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Регистрация"
                       HorizontalAlignment="Center"
                    Background="Transparent"
                       Foreground="Black" FontFamily="Gabriola"
                        FontSize="16" Click="RegistrationClick" BorderThickness="0,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
